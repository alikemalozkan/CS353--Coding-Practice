@model CS353.Models.Entity.TBLUser
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUserPage.cshtml";
}

<h2>My Profile</h2>
@using (Html.BeginForm("Index2", "UserPage", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:25px">
        <tr>
            <td>
                Name
                @Html.TextBoxFor(x => x.u_name, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                Surname
                @Html.TextBoxFor(x => x.u_surname, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Email:</label> @HttpContext.Current.User.Identity.Name (cannot be changed)
            </td>
        </tr>
        <tr>
            <td>
                Password
                @Html.TextBoxFor(x => x.u_password, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                Preference List
                @Html.TextBoxFor(x => x.u_preferenceList, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Update Account</button>
            </td>
        </tr>
    </table>
}