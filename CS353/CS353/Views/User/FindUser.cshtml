@model CS353.Models.Entity.TBLUser
@{
    ViewBag.Title = "FindUser";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateUser", "User", FormMethod.Post))
{
    <div style=" margin-bottom:20px; margin-top:20px"></div>
    <div class="form-group">
        @Html.LabelFor(i => i.u_id)
        @Html.TextBoxFor(i => i.u_id, new { @class = "form-control" })
        <br />
        @Html.LabelFor(i => i.u_name)
        @Html.TextBoxFor(i => i.u_name, new { @class = "form-control" })
        <br />
        @Html.LabelFor(i => i.u_surname)
        @Html.TextBoxFor(i => i.u_surname, new { @class = "form-control" })
        <br />
        @Html.LabelFor(i => i.u_email)
        @Html.TextBoxFor(i => i.u_email, new { @class = "form-control" })
        <br />
        @Html.LabelFor(i => i.u_password)
        @Html.TextBoxFor(i => i.u_password, new { @class = "form-control" })
        <br />
        @Html.LabelFor(i => i.u_preferenceList)
        @Html.TextBoxFor(i => i.u_preferenceList, new { @class = "form-control" })
  
    </div>
    <div>
        <button class="btn btn-warning">Update</button>
    </div>
}