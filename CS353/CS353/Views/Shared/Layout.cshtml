@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #000000;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/Homepage/Index"><i class="glyphicon glyphicon-home"></i> &nbsp; Website Homepage</a>
        <a href="/Movie/Index/"><i class="glyphicon glyphicon-list"></i> &nbsp; Movies</a>
        <a href="/Series/Index/"><i class="glyphicon glyphicon-tag"></i> &nbsp; Series</a>
        <a href="/Episode/Index/"><i class="glyphicon glyphicon-tag"></i> &nbsp; Episodes</a>
        <a href="/Genre/Index/"><i class="glyphicon glyphicon-lock"></i> &nbsp; Genres</a>
        <a href="/User/Index/"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Users</a>
        <a href="/Wishlist/Index/"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Wishlist</a>
        <a href="/Login/Login"><i class="glyphicon glyphicon-remove"></i> &nbsp; Log out</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
